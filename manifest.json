{
  "manifest_version": 3,
  "name": "llm-assistant-copyfix",
  "version": "0.1.0",
  "description": "Preserve user-message newlines when copying from chatgpt.com.",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
