{
  "manifest_version": 3,
  "name": "llm-assistant-copyfix",
  "version": "0.3.0",
  "description": "Preserve line breaks when copying messages from ChatGPT, Gemini, and Claude.",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
